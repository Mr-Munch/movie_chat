<div class="black-image">
	<div class="container">
	    <div class="row">
	       	<div class="col-lg-4 show-image">
	       		<%= render partial: 'movies/photo', locals: { movie: @movie } %>
	       	</div>
	       	<div class="col-lg-8">
	       		<div class="movie-content">
	       			<h3><%= @movie.title %></h3>
	       			<p class="movie-caption"><%= @movie.caption %></p>
	       			<p>上映開始日 <%= @movie.day %></p>
					<p>国：
						<span class="btn btn-success"><%= @movie.country %></span>
					</p>
					<p>カテゴリー：
						<span class="btn btn-warning"><%= @movie.category %></span>
					</p>
					<%= link_to movie_chats_path(@movie.id), class: "btn btn-info" do %>
						<i class="fa fa-comments" aria-hidden="true">コメント</i>
					<% end %>
	       		</div>
	       	</div>
	    </div>
	    <div class="movie-box">
		    <div class="film-image"><%= image_tag "image/film.png" %></div>
		    <div class="youtube">
		    	<%= render partial: 'movies/youtube', locals: { movie: @movie } %>
		    </div>
		</div>
	</div>
</div>